# ---- Build stage ----
FROM node:20-slim AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# ---- Serve stage ----
FROM nginxinc/nginx-unprivileged:alpine

EXPOSE 8080

# Copy Vite build output
COPY --from=build /app/dist /usr/share/nginx/html

# NGINX config
COPY nginx.conf /etc/nginx/conf.d/default.conf
